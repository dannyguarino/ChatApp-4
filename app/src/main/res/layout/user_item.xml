<?xml version="1.0" encoding="utf-8"?>

<!--Circle image-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_profile_image"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:src="@mipmap/ic_launcher"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/username"

        android:layout_toRightOf="@id/my_profile_image"
        android:layout_toEndOf="@id/my_profile_image"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_img_on"
        android:layout_height="15dp"
        android:layout_width="15dp"
        app:civ_border_color="@color/online"
        app:civ_border_width="10dp"
        android:layout_below="@id/username"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/my_profile_image"
        android:layout_toEndOf="@id/my_profile_image"
        android:layout_marginLeft="-15dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_img_off"
        android:layout_height="15dp"
        android:layout_width="15dp"
        app:civ_border_color="@color/offline"
        app:civ_border_width="10dp"
        android:layout_below="@id/username"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/my_profile_image"
        android:layout_toEndOf="@id/my_profile_image"
        android:layout_marginLeft="-15dp"
        android:src="@mipmap/ic_launcher"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/add_friend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/add_friend"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/remove_friend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/remove_friend"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/invited_friend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/invited_friend"/>

    <TextView

        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="7dp"
        android:text="543132"
        android:visibility="gone" />


</RelativeLayout>